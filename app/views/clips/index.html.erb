<%= content_for :header do %>
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 flex justify-between items-center h-full">
    <div class="lg:ml-4">
      <input type="email" name="email" id="email" class="max-h-8 block w-5/6 lg:w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" placeholder="Future search feature">
    </div>
    <div class="text-sm font-bold tracking-tight text-gray-900">
      <button data-controller="clipboard" data-action="clipboard#paste" disabled>
        <p class="flex"><%= image_tag "copy-icon.svg", size: "20x20", class: "mx-2" %> âŒ˜ + V to paste a clip</p>
      </button>
    </div>
  </div>
<% end %>


<%= render 'add_clip' %>

<% if @clips.length == 0  %>
    <div class="flex items-center justify-between lg:mb-4">
      <h1 class="lg:text-3xl text-md font-heavy hidden lg:block">Clips</h1>
    </div>
    <div class="mx-auto">
      <div class="flex flex-col h-full items-center justify-between p-8 bg-white rounded shadow lg:flex-row">
        <%= image_tag "empty_clips.svg" , class: "mb-4 w-1/2  lg:w-1/4 ml-10" %>
        <div class="flex-1 text-center">
          <div class="text-center">
            <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
              <path vector-effect="non-scaling-stroke" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 13h6m-3-3v6m-9 1V7a2 2 0 012-2h6l2 2h6a2 2 0 012 2v8a2 2 0 01-2 2H5a2 2 0 01-2-2z" />
            </svg>
            <h3 class="mt-2 text-sm font-medium text-gray-900">No clips</h3>
            <p class="mt-1 text-sm text-gray-500">Get started by creating a new clip from your clipboard.</p>
            <div class="mt-6">
              <button type="button" data-controller="clipboard" data-action="clipboard#paste"  class="inline-flex items-center rounded-md border border-transparent bg-indigo-600 px-4 py-2 text-sm font-medium text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">
                <!-- Heroicon name: mini/plus -->
                <svg class="-ml-1 mr-2 h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                  <path d="M10.75 4.75a.75.75 0 00-1.5 0v4.5h-4.5a.75.75 0 000 1.5h4.5v4.5a.75.75 0 001.5 0v-4.5h4.5a.75.75 0 000-1.5h-4.5v-4.5z" />
                </svg>
                New Clip
              </button>
            </div>
          </div>

        </div>
      </div>
    </div>
<% else %>
  <div class="text-sm font-bold tracking-tight text-gray-900">
  </div>
  <ul role="list" class="grid grid-cols-2 gap-x-4 gap-y-8 sm:grid-cols-3 sm:gap-x-6 lg:grid-cols-3 xl:gap-x-8">
    <%= render @clips %>
  </ul>
<% end %>