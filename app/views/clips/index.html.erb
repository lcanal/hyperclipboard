<%= content_for :header do %>
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 flex justify-between items-center h-full">
    <div class="ml-4">
      <input type="email" name="email" id="email" class="block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" placeholder="Future search feature">
    </div>
    <div class="text-sm font-bold tracking-tight text-gray-900">
      <button data-controller="clipboard" data-action="click->clipboard#paste" class="btn-primary">
        <p>Add clip</p>
      </button>
    </div>
  </div>
<% end %>


<%= render 'add_clip' %>

<% if @clips.length == 0  %>
    <div class="flex items-center justify-between mb-4">
      <h1 class="text-3xl font-heavy h3">Clips</h1>
    </div>
    <div class="mx-auto">
      <div class="flex flex-col h-full items-center justify-between p-8 bg-white rounded shadow lg:flex-row">
        <%= image_tag "empty_clips.svg" , class: "mb-4 lg:w-1/4 ml-10" %>
        <div class="flex-1 text-center">
          <p class="mb-4 text-3xl font-bold">Add a new clip from clipboard</p>
          <button data-controller="clipboard" data-action="click->clipboard#paste" class="btn-primary-lg">
            <p>Add clip</p>
          </button>
        </div>
      </div>
    </div>
<% else %>
  <ul role="list" class="grid grid-cols-2 gap-x-4 gap-y-8 sm:grid-cols-3 sm:gap-x-6 lg:grid-cols-3 xl:gap-x-8">
    <%= render @clips %>
  </ul>
<% end %>

