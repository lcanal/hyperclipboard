<%= content_for :header do %>
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 flex justify-end items-center h-full">
    <div class="text-sm font-bold tracking-tight text-gray-900">
      <button data-controller="clipboard" data-action="click->clipboard#paste" class="flex items-center">
          <p>Add clip</p>
        <%= image_tag "add-icon.svg", size: "25x25", class:"ml-2" %>
      </button>
    </div>
  </div>
<% end %>


<%= render 'add_clip' %>

<ul role="list" class="grid grid-cols-2 gap-x-4 gap-y-8 sm:grid-cols-3 sm:gap-x-6 lg:grid-cols-3 xl:gap-x-8">
  <%= render @clips %>
</ul>

