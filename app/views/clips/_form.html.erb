<%= form_with model: @clip, class: "flex h-full flex-col divide-y divide-gray-200 bg-white shadow-xl" do |form| %>
  <div class="h-0 flex-1 overflow-y-auto">
    <div class="py-6 px-4 sm:px-6" style="background-color: #9abdd8">
      <div class="flex items-center justify-between">
        <h2 class="text-lg font-medium text-white" id="slide-over-title">Paste</h2>
        <div class="ml-3 flex h-7 items-center">
          <button type="button"
                  data-action="click->slide-over#hide"
                  style="background-color: #9abdd8"
                  class="rounded-md text-indigo-200 hover:text-white focus:outline-none focus:ring-2 focus:ring-white">
            <span class="sr-only">Close panel</span>
            <!-- Heroicon name: outline/x-mark -->
            <svg class="h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
            </svg>
          </button>
        </div>
      </div>
      <div class="mt-1">
        <p class="text-sm text-indigo-300">Fill in some details if you want, or just hit enter to save.</p>
      </div>
    </div>
    <div class="flex flex-1 flex-col justify-between">
      <div class="divide-y divide-gray-200 px-4 sm:px-6">
        <div class="space-y-6 pt-6 pb-5">
          <div>
            <label for="clip-name" class="block text-sm font-medium text-gray-900">Clip name</label>
            <div class="mt-1">
              <%= form.text_field :name, data: { slide_over_target: "name" }, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm"  %>
            </div>
          </div>
          <div>
            <label for="description" class="block text-sm font-medium text-gray-900">URL</label>
            <div class="mt-1">
              <%= form.text_field :url, data: { slide_over_target: "url" }, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm"  %>
            </div>
          </div>
          <div>
            <label for="description" class="block text-sm font-medium text-gray-900">Description</label>
            <div class="mt-1">
              <%= form.text_area :description, data: { slide_over_target: "description" }, rows: 4, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
            </div>
          </div>
          <div>
            <label for="image" class="block text-sm font-medium text-gray-900">File</label>
            <div class="mt-1">
              <%= form.file_field :image, data: { slide_over_target: 'preview'}, class: 'form-control block w-full px-3 py-1.5 text-base font-normal text-gray-700 bg-white bg-clip-padding border border-solid border-gray-300 rounded transition ease-in-out m-0 focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none' %>
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>
  <div class="flex flex-shrink-0 justify-end px-4 py-4">
    <button type="button"
            data-action="click->slide-over#hide"
            class="rounded-md border border-gray-300 bg-white py-2 px-4 text-sm font-medium text-gray-700 shadow-sm hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">Cancel</button>
    <%= form.submit "Save", class: "btn-primary ml-4" %>
  </div>
</form>
<% end %>
