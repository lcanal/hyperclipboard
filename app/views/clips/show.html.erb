<div class="overflow-hidden bg-white shadow sm:rounded-lg">
  <div class="px-4 py-5 sm:px-6">
    <h3 class="text-lg font-medium leading-6 text-gray-900"><%= @clip.name %></h3>
    <p class="mt-1 max-w-2xl text-sm text-gray-500"><%= @clip.description %></p>
  </div>
  <div class="border-t border-gray-200 px-4 py-5 sm:px-6">
    <dl class="grid grid-cols-1 gap-x-4 gap-y-8 sm:grid-cols-2">
      <div class="sm:col-span-1">
        <dt class="text-sm font-medium text-gray-500">Full URL</dt>
        <dd class="mt-1 text-sm text-gray-900 overflow-hidden">
          <%= link_to url_for(@clip.image_link), url_for(@clip.image_link), target: "_blank", class: "text-indigo-500"%>
        </dd>
      </div>
      <div class="sm:col-span-1">
        <dt class="text-sm font-medium text-gray-500">Expires on</dt>
        <dd class="mt-1 text-sm text-gray-900"><%= @clip.expires.strftime('%b %d %Y - %H:%M:%S (%Z)') %></dd>
      </div>
      <div class="sm:col-span-1">
        <dt class="text-sm font-medium text-gray-500">Created</dt>
        <dd class="mt-1 text-sm text-gray-900"><%= @clip.created_at.strftime('%b %d %Y - %H:%M:%S (%Z)') %></dd>
      </div>
      <div class="sm:col-span-1">
        <dt class="text-sm font-medium text-gray-500">Updated</dt>
        <dd class="mt-1 text-sm text-gray-900"><%= @clip.created_at.strftime('%b %d %Y - %H:%M:%S (%Z)') %></dd>
      </div>
      <div class="sm:col-span-2">
        <dt class="text-sm font-medium text-gray-500">Image</dt>
        <dd class="mt-1 text-sm text-gray-900 justify-center">
          <div class="flex justify-center">
            <%= image_tag @clip.image_tag, class: "h-full" %>
          </div>
        </dd>
      </div>
    </dl>
  </div>
</div>

<div class="flex justify-end my-5">
  <button type="button" class="inline-flex items-center rounded-md border border-gray-300 bg-white px-4 py-2 text-sm font-medium text-gray-700 shadow-sm hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">Delete</button>
</div>
